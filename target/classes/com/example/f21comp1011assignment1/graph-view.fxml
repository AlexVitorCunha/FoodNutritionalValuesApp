<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.f21comp1011assignment1.Controllers.GraphViewController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <center>
            <BarChart fx:id="barChart" animated="false" BorderPane.alignment="CENTER">
              <xAxis>
                <CategoryAxis fx:id="foodAxis" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="nutrientAxis" side="LEFT" />
              </yAxis>
            </BarChart>
         </center>
         <top>
            <Label text="Nutrients Comparison" BorderPane.alignment="CENTER" />
         </top>
         <bottom>
            <Pane prefHeight="79.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="32.0" layoutY="26.0" prefHeight="26.0" prefWidth="133.0" text="Choose nutrient" />
                  <ComboBox fx:id="nutrientComboBox" layoutX="177.0" layoutY="20.0" onAction="#updateGraph" prefWidth="150.0" />
                  <Button layoutX="476.0" layoutY="20.0" mnemonicParsing="false" onAction="#viewTableButton" text="View Table" />
               </children>
            </Pane>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
